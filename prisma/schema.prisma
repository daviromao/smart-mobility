// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bus {
  id              Int      @id @unique
  uri             String?
  created_at      DateTime
  updated_at      DateTime
  lat             Float
  lon             Float
  status          String
  collect_interval Int?
  description     String?
  uuid            String @unique
  city            String?
  neighborhood    String?
  state           String?
  postal_code     String?
  country         String?
  capabilities    String[]
  air_activated   Boolean?
}
